{
    "$schema": "./schemas/task.config.json",
    "tasks": {
        "dev": {
            "tasks": {
                "packages": {
                    "command": "bun run --filter './packages/*' dev"
                },
                "server": {
                    "cwd": "./services/server",
                    "command": "cargo run -- --port 3000"
                }
            }
        },
        "format": {
            "command": "cargo fmt"
        },
        "lint": {
            "command": "bun run --filter './packages/*' lint",
            "dependsOn": ["format"]
        },
        "check": {
            "command": "bun run --filter './packages/*' check"
        },
        "generate": {
            "command": "bun tsx scripts/generate.ts"
        }
    }
}