{
    "$schema": "./schemas/task.config.json",
    "tasks": {
        "dev": {
            "tasks": {
                "packages": {
                    "command": "pnpm -r --filter ./packages/* dev"
                },
                "server": {
                    "cwd": "./services/server",
                    "command": "cargo run -- --port 3000"
                }
            }
        },
        "format": {
            "command": "cargo fmt"
        },
        "lint": {
            "command": "pnpm lint",
            "dependsOn": ["format"]
        },
        "check": {
            "command": "pnpm check"
        }
    }
}