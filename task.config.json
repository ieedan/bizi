{
  "$schema": "./schemas/task.config.json",
  "tasks": {
    "dev": {
      "tasks": {
        "server": {
          "cwd": "./services/server",
          "command": "cargo run -- --port 3000"
        },
        "generate": {
          "command": "bun tsx scripts/generate.ts"
        },
        "packages": {
          "command": "bun run --filter './packages/*' dev",
          "dependsOn": ["dev:generate"]
        }
      }
    },
    "format": {
      "tasks": {
        "ultracite": {
          "command": "bun ultracite fix"
        },
        "cargo": {
          "command": "cargo fmt"
        }
      }
    },
    "check": {
      "dependsOn": ["format"],
      "tasks": {
        "ultracite": {
          "command": "bun ultracite check"
        },
        "cargo": {
          "command": "cargo check"
        }
      }
    },
    "generate": {
      "command": "bun tsx scripts/generate.ts"
    }
  }
}
